{% extends 'base.html.twig' %}

{% block title %}Nouvelle commande{% endblock %}

{% block titre %}Nouvelle commande{% endblock %}

{% block space %}{% endblock %}

{% block body %}

<section class="py-5">
	<div class="container">
		<div class="row">
			<div class="col-sm-5 ml-auto">
				<div class="card mb-3">
					<div class="card-body">
						<h4 class="py-3 h5">Nouvelle commande</h4>
                        
                        <div class="">
                            <div class="d-flex align-items-top mb-2">
                                <p class="mb-0 text-muted">Frais bancaires</p>
                                <p class="text-muted mb-0 mt-0 ml-auto">{{ taux ~ currency }}</p>
                            </div>
                            <div class="d-flex align-items-top mb-2">
                                <p class="mb-0 text-muted">Frais de service</p>
                                <p class="text-muted mb-0 mt-0 ml-auto">{{ frais ~ currency }}</p>
                            </div>
                            <div class="d-flex align-items-top mb-2">
                                <p class="mb-0 text-muted">Sous-total</p>
                                <p class="text-muted mb-0 mt-0 ml-auto">{{ montant ~ currency }}</p>
                            </div>
                            <div class="d-flex align-items-top mb-2">
                                <p class="mb-0 text-muted">Total</p>
                                <p class="text-muted mb-0 mt-0 ml-auto">{{ total ~ currency }}</p>
                            </div>
                        </div>
						{% include "commande/composants/_stripe.html.twig" %}

						<div>
							{% include "commande/composants/_paypal_button.html.twig" %}
						</div>

						<p class="py-3 text-center p-0">
							Paiement <strong><i class="fa fa-lock"></i> Sécurisé</strong>
						</p>

					</div>
				</div>
			</div>
			<div class="col-sm-5 mr-auto">
				{{ include('vendeur/microservices/composants/_bloc.html.twig') }}
			</div>
		</div>
	</div>
</section>

{% endblock %}