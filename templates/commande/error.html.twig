{% extends 'base.html.twig' %}

{% block title %}problème lié a la commande
{% endblock %}

{% block titre %}error {{ app.user.nom }} {{ app.user.prenom }}{% endblock %}

{% block col %}6{% endblock %}

{% block body %}

<section class="py-5">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 mx-auto">
				<div class="card">
					<div class="card-body text-center">
						<div class="row">
							<div class="col-sm-3 mx-auto text-center">
								<img src="{{ asset('img/cancel.svg') }}" class="img-fluid mt-3" alt="">
							</div>
						</div>
						<div>
							<h6 class="text-center py-3">Oops...</h6>
							<p class="text-muted m-0">Un problème est survenu, empêchant l'exécution de cette page.</p>
							<p>Vous pouvez nous le signaler en contactant notre support :</p>
							<a href="mailto:{{ appEmail }}" class="font-weight-bold">{{ appEmail }}</a>
							
							{% if commande.microservice %}
								<div class="py-2">
									<a href="{{ path('commander_microservice_reservation', {commande: commande.id, slug: commande.microservice.slug}) }}" class="btn btn-dark">Retenter &longrightarrow;</a>
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

{% endblock %}