    </div>
</section>

<section class="main-page">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <div class="">
                    <!--<h4 class="h6 pb-3">Services</h4>
                    <div class="row service-slider pb-3">
                        {% for service in pack.categorie %}
