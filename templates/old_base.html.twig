<!DOCTYPE html>
<html lang="fr">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>
		{% block title %}{{ appName }} des services pour tout vos besoins{% endblock %}
	</title>

	{% block meta %}
	<meta name="author" content="{{ appName }}">
	<meta name="keywords" content="{{ appName }} : Vous accompagne dans la réalisation de vos projets sur mesure.">
	<meta name="description"
		content="Trouvez le vendeur qui saura répondre à vos besoins spécifiques et vous accompagner dans vos réalisations sur mesure.">
	{% endblock %}


	<!-- Favicon Icon -->
	<link rel="icon" href="{{ asset('img/logo/favicon.png') }}">
	<!-- Bootstrap core CSS -->
	<link href="{{ asset('themes/base/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
	<!-- Font Awesome-->
	<link href="{{ asset('themes/base/vendor/fontawesome/css/font-awesome.min.css') }}" rel="stylesheet">
	<!-- Material Design Icons -->
	<link href="{{ asset('themes/base/vendor/icons/css/materialdesignicons.min.css') }}" media="all" rel="stylesheet"
		type="text/css">
	<!-- Slick -->
	<link href="{{ asset('themes/base/vendor/slick-master/slick/slick.css') }}" rel="stylesheet" type="text/css">
	<!-- Lightgallery -->
	<link href="{{ asset('themes/base/vendor/lightgallery-master/dist/css/lightgallery.min.css') }}" rel="stylesheet">
	<!-- Select2 CSS -->
	<link href="{{ asset('themes/base/vendor/select2/css/select2-bootstrap.css') }}" />
	<link href="{{ asset('themes/base/vendor/select2/css/select2.min.css') }}" rel="stylesheet">
	<!-- Custom styles for this template -->
	{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	{{ encore_entry_link_tags('style') }}
	{{ encore_entry_link_tags('custom') }}
	{{ encore_entry_link_tags('responsive') }}

		<link href="{{ asset('themes/base/css/custom_homepage.css') }}" rel="stylesheet">
	{% endblock %}

	<!-- Cke editor -->
	<script defer src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>

	<style>
		.slick-track {
			margin-left: 0 !important;
			margin-right: auto !important;
		}
		.flash{
			position: fixed;
			top: 102px;
			width: auto;
			right: 5px;
			z-index: 100!important;
			height: fit-content;
		}

		@media(max-width:1024px) {
			.flash{
				bottom: 10px;
			}
		}
	</style>

	<link href="{{ asset('themes/custom/vendeur.css') }}" rel="stylesheet">

</head>

<body data-turbo="false" class="bg {{ app.user ? 'userConnected' }} {% block body_class '' %}">

	{% block navbar %}
	{{ include('partials/base/_navbars.html.twig') }}
	{% endblock %}

	{% block serviceBlocNavigation %}{% endblock %}

	{{ include('partials/_flash_message.html.twig') }}

	{% block body %}{% endblock %}

	<!--       footer -->
	{% block footer %}
	{{ include('partials/base/_footer.html.twig') }}
	{% endblock %}

	<!--       footer-->
	<!-- Bootstrap core JavaScript -->
	<script src="{{ asset('themes/base/vendor/jquery/jquery.min.js') }}"></script>
	<script src="{{ asset('themes/base/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
	<!-- Contact form JavaScript -->
	<!-- Do not edit these files! In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
	<script src="{{ asset('themes/base/js/jqBootstrapValidation.js') }}"></script>
	<script src="{{ asset('themes/base/js/contact_me.js') }}"></script>
	<!-- Slick -->
	<script src="{{ asset('themes/base/vendor/slick-master/slick/slick.js') }}" type="text/javascript"
		charset="utf-8"></script>
	<!-- lightgallery -->
	<script src="{{ asset('themes/base/vendor/lightgallery-master/dist/js/lightgallery-all.min.js') }}"></script>
	<!-- select2 Js -->

	<script src="{{ asset('themes/base/vendor/select2/js/select2.min.js') }}"></script>

	<!-- axios -->
	<script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>

	<!-- Custom -->
	{% block javascripts %}
		{{ encore_entry_script_tags('app') }}
		{{ encore_entry_script_tags('jscustom') }}
		{{ encore_entry_script_tags('dropdown') }}
		{{ encore_entry_script_tags('favoris') }}
		{{ encore_entry_script_tags('btnloader') }}
		{{ encore_entry_script_tags('file') }}
	{% endblock %}


	<script src="{{ asset('themes/custom/script_v1.js') }}"></script>
	<script>
		// Add the following code if you want the name of the file appear on select
		$(".custom-file-input").on("change", function () {
			let fileName = $(this).val().split("\\").pop();
			$(this).siblings(".custom-file-label").addClass("selected").html(fileName);

			let i = $(this).prev('label').clone();
			let file = $(".custom-file-input")[0].files[0].name;
			let label = $(".label");
			label.text(file);
		});
	</script>


	<script>
		$(document).ready(function () {
			$('.modal-location').modal({
				backdrop: 'static',
				keyboard: true,
				show: true
			});
		})
	</script>

	<script>
		$(document).ready(function () {
			$('.modal').modal({
				backdrop: 'static',
				keyboard: true,
				show: false
			});

			var chatBox = document.querySelector('.osahan-chat-box');

			// Défilement vers le bas dans la messagerie de discussion quand on actualise la pagee
			if (chatBox) {
				chatBox.scrollTop = chatBox.scrollHeight;
			}

			$('.menuBurger').click( function() {
				$('body').toggleClass('activeMenuBurger');
			});
		})
	</script>

</body>

</html>