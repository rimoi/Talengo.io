{% extends 'admin.html.twig' %}

{% block title %}Rapport{% endblock %}

{% block body %}
    <h1>Rapport</h1>

    <a href="{{ path('app_admin_rapports_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rapport.id }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ rapport.fichier }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ rapport.contenu|raw }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ rapport.created ? rapport.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ rapport.updated ? rapport.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>



    <a href="{{ path('app_admin_rapports_edit', {'id': rapport.id}) }}" class="btn btn-info">Modifier</a>

    <div class="mt-1">
        {{ include('admin/admin_rapports/_delete_form.html.twig') }}
    </div>

{% endblock %}
