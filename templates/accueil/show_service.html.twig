{% extends 'base.html.twig' %}

{% block footer %}
  {{ parent() }}

    <script>
        $('header').addClass('stickyMenu');
    </script>
{% endblock %}

{%- block body_class %}
    {{ parent() }}
    noStickyMenu
{% endblock -%}


{% block body %}

    <div class="cs-list-top-services">
        <div class="filter">
            <div class="container">
                <div class="wrp-select">
                    <span class="label">Trier par :</span>
                    <select class="custom-select" name="" data-url="{{ path('show_service', {slug: app.request.attributes.get('slug')}) }}" >
                        <option value="0">Pertinence</option>
                        <option value="1" {{ app.request.get('q') == '1' ? 'selected' }}>Meilleures ventes</option>
                        <option value="2" {{ app.request.get('q') == '2' ? 'selected' }}>Dernières nouveautés</option>
                    </select>
                </div>
            </div>
        </div>

        <section class="section-services">
            <div class="container">
                <h3 class="primaryTitle">Services de la catégorie '{{ categorie.name }}'</h3>
                <div class="content">
                    {% for microservice in microservices %}
                        {{ include('microservice/composants/_bloc.html.twig') }}
                    {% endfor %}
                </div>

                {{ knp_pagination_render(microservices, '@KnpPaginator/Pagination/custom_pagination.html.twig') }}
            </div>
        </section>
    </div>
{% endblock %}
