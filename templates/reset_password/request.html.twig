{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe
{% endblock %}

{% block titre %}Réinitialisez votre mot de passe
{% endblock %}

{% block body %}

	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<div class="account-page">
		<div class="container">
			<div class="content-sign-upForm">
				<h1 class="primaryTitle">Mot de passe oublié ? </h1>
				<p class="labelTitle">Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>
				{{ form_start(requestForm) }}
					<div class="row-form">
						{{ form_row(requestForm.email) }}
					</div>
					<button type="submit" class="btn btn-primaryBlue">Envoyer</button>
				{{ form_end(requestForm) }}
				<p class="connexion-link">Pas encore inscrit sur Talengo.io ? <a href="{{ path('app_register') }}">S'inscrire</a></p>
			</div>
		</div>
	</div>
	
{% endblock %}
